{
  "name": "zod-compare",
  "version": "2.0.0",
  "description": "Compare two Zod schemas recursively.",
  "keywords": [
    "zod",
    "compare",
    "comparator",
    "schema",
    "type",
    "typescript",
    "validation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lawvs/zod-compare.git"
  },
  "license": "MIT",
  "author": "whitewater <me@waterwater.moe>",
  "sideEffects": false,
  "type": "module",
  "main": "src/index.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typeCheck": "tsc --noEmit",
    "test": "vitest",
    "playground": "vite playground",
    "build:playground": "vite build -c vite.config.playground.ts",
    "changeset": "changeset",
    "release": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@vitest/coverage-v8": "^3.2.4",
    "prettier": "^3.4.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "zod": "^4.2.0"
  },
  "peerDependencies": {
    "zod": "^3.25.0 || ^4.0.0"
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=20"
  },
  "prettier": {},
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      "./package.json": "./package.json",
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      },
      "./zod3": {
        "types": "./dist/zod3/index.d.ts",
        "import": "./dist/zod3.js",
        "require": "./dist/zod3.cjs"
      },
      "./zod4": {
        "types": "./dist/zod4/index.d.ts",
        "import": "./dist/zod4.js",
        "require": "./dist/zod4.cjs"
      }
    }
  }
}
